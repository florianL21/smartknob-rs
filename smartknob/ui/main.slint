export global State {
    in property <angle> encoder_angle: 0.0;
}

component Slider inherits Rectangle {
    in property <angle> rotation: 0;

    clip: true;

    Rectangle {
        border-radius: 200px;
        width: 180px;
        height: 180px;
        background: white;
        transform-rotation: rotation;
        Rectangle {
            border-radius: 20px;
            width: 15px;
            height: 15px;
            background: red;
            x: parent.x;
            y: parent.y;
        }
    }
}

export component HelloWorld inherits Window {
    width: 240px;
    height: 240px;
    background: black;

    Slider {
        height: 240px;
        width: 240px;
        rotation: State.encoder_angle;
    }

    Text {
        text: "A: " + State.encoder_angle / 1deg;
    }
}
