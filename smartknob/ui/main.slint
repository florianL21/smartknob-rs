export global State { }

import { Slider } from "slider.slint";


export component MainWindow inherits Window {
    width: 240px;
    height: 240px;
    background: black;
    in property <angle> encoder_angle: 0.0;

    Slider {
        height: 240px;
        width: 240px;
        rotation: encoder_angle;
    }

    Text {
        text: "A: " + encoder_angle / 1deg;
    }
}
